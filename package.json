{
  "name": "diet-calculator",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Gabriel Soares",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "node src/main.js",
    "dev": "node src/main.js",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.25.4",
    "babel-jest": "^29.7.0",
    "eslint": "^8.51.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.1.6",
    "eslint-plugin-prettier": "^5.0.0",
    "globals": "^15.9.0",
    "prettier": "^3.0.3"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "plugins": [
      "prettier",
      "eslint-plugin-jest"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "extends": [
      "prettier",
      "eslint:recommended"
    ],
    "root": true,
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ],
      "semi": [
        2,
        "always"
      ],
      "no-trailing-spaces": "error",
      "quotes": [
        2,
        "single",
        {
          "avoidEscape": true
        }
      ],
      "no-underscore-dangle": "off",
      "class-methods-use-this": "off",
      "no-param-reassign": "off",
      "import/first": "off",
      "import/order": "off",
      "linebreak-style": "off",
      "no-restricted-syntax": "off",
      "no-await-in-loop": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "endOfLine": "auto",
    "semi": true
  },
  "dependencies": {
    "jest": "^29.7.0"
  }
}
